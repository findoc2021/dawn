{%- endcomment -%}

{%- if shop.metafields.yoast_seo.settings.schema.siteRepresentation.organizationName != "" -%}
{%- capture logo -%}{%- render 'yoast-seo-image-filename', url: shop.metafields.yoast_seo.settings.schema.siteRepresentation.organizationLogo.url -%}{%- endcapture -%}
{%- assign logo_object = images[logo] -%}
{%- liquid
	assign facebook = shop.metafields.yoast_seo.settings.schema.socialProfiles.facebookPageUrl | split: '\_([.YOAST_ARRAY_SPLITTER.])_/'
	assign twitter = shop.metafields.yoast_seo.settings.schema.socialProfiles.twitterProfileUrl |  split: '\_([.YOAST_ARRAY_SPLITTER.])_/'
	assign socialProfiles = shop.metafields.yoast_seo.settings.schema.socialProfiles.other | concat: facebook | concat: twitter
-%}
{
	"@type": "Organization",
	"@id": "{{ shop.url }}/#/schema/organization/1",
	"url": "{{ shop.url }}",
	"name": {{ shop.metafields.yoast_seo.settings.schema.siteRepresentation.organizationName | json }},
{%- if logo_object != null and logo_object != empty %}
	"logo": {
		"@id": "{{ shop.url }}/#/schema/ImageObject/{{ logo_object.id }}"
	},
	"image": [
		{
			"@id": "{{ shop.url }}/#/schema/ImageObject/{{ logo_object.id }}"
		}
	],
{%- endif %}
	"sameAs": {{ socialProfiles | json }}
},
{% render 'yoast-seo-schema-image', image: logo -%}
{%- endif -%}
